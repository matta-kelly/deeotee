#!/bin/bash
# Prepare wallpapers for different resolutions

SOURCE="$HOME/Pictures/wallpaper/wallpaper.jpg"
DEST_DIR="$HOME/Pictures/wallpaper"

# Check if source exists
if [ ! -f "$SOURCE" ]; then
    echo "Error: $SOURCE not found"
    echo "Place your wallpaper at ~/Pictures/wallpaper/wallpaper.jpg first"
    exit 1
fi

echo "Creating optimized wallpapers..."

# 1920x1200 for laptop
convert "$SOURCE" \
    -resize 1920x1200^ \
    -gravity center \
    -extent 1920x1200 \
    -quality 95 \
    "$DEST_DIR/wall-1200.jpg"
echo "✓ Created wall-1200.jpg (laptop)"

# 1920x1080 for all external monitors
convert "$SOURCE" \
    -resize 1920x1080^ \
    -gravity center \
    -extent 1920x1080 \
    -quality 95 \
    "$DEST_DIR/wall-1080.jpg" 
echo "✓ Created wall-1080.jpg (externals)" 

echo "Done! Reload Sway with Mod+Shift+C"  