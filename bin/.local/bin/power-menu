#!/bin/bash
# Power menu using rofi

choice=$(echo -e "ğŸ”’ Lock\nğŸ’¤ Sleep\nâ» Shutdown\nğŸ”„ Reboot" | rofi -dmenu -p "Power")

case "$choice" in
    "ğŸ”’ Lock")
        swaylock -f -c 000000
        ;;
    "ğŸ’¤ Sleep")
        swaylock -f -c 000000 &
        sleep 1
        systemctl suspend
        ;;
    "â» Shutdown")
        systemctl poweroff
        ;;
    "ğŸ”„ Reboot")
        systemctl reboot
        ;;
esac
