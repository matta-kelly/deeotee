#!/bin/bash
# Power menu using rofi

choice=$(echo -e "ğŸ”’ Lock\nğŸ’¤ Sleep\nâ™»ï¸ Reboot\nâ›” Shutdown" | rofi -dmenu -p "Power" -theme-str 'window {width: 250px;} listview {lines: 4; scrollbar: false;} inputbar {children: [prompt]; text-color: @foreground;} prompt {horizontal-align: 0.5;}')

case "$choice" in
    "ğŸ”’ Lock")
        swaylock -f -c 000000
        ;;
    "ğŸ’¤ Sleep")
        swaylock -f -c 000000 &
        sleep 1
        systemctl suspend
        ;;
    "â™»ï¸ Reboot")
        systemctl reboot
        ;;
    "â›” Shutdown")
        systemctl poweroff
        ;;
esac